<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/checked"
        android:drawable="@drawable/vd_checkable_favorite_checked"
        android:state_checked="true"/>

    <item
        android:id="@+id/unchecked"
        android:drawable="@drawable/vd_checkable_favorite_unchecked"
        android:state_checked="false"/>

    <transition
        android:drawable="@drawable/avd_checkable_favorite_unchecked_to_checked"
        android:fromId="@id/unchecked"
        android:toId="@id/checked"/>

    <transition
        android:drawable="@drawable/avd_checkable_favorite_checked_to_unchecked"
        android:fromId="@id/checked"
        android:toId="@id/unchecked"/>

</animated-selector>